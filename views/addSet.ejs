<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Set</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('partials/navbar', {page: '/lego/addSet' }) %>
    <div class="container mx-auto">
        <div class="hero min-h-screen bg-base-200">
            <div class="text-center hero-content">
                <div class="max-w-md">
                    <h1 class="mb-5 text-5xl font-bold">Add Set</h1>
                    <p class="mb-5">Please fill out the form below to add a new set</p>
                </div>
            </div>
        </div>
        <form action="/lego/addSet" method="POST">
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Name</span>
                </label>
                <input type="text" name="name" class="input input-bordered" required>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Year</span>
                </label>
                <input type="number" name="year" class="input input-bordered" required>

            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Number of Parts</span>
                </label>
                <input type="number" name="num_parts" class="input input-bordered" required>

            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text

                    ">Image URL</span>
                </label>
                <input type="url" name="img_url" class="input input-bordered" required>
                
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Theme</span>
                </label>
                <select name="theme_id" class="select select-bordered" required>
                    <% themes.forEach(theme=>{ %>
                    <option value="<%= theme.id %>">
                        <%= theme.name %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Set Number</span>
                </label>
                <input type="text" name="set_num" class="input input-bordered" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Set</button>
        </form>
    </div>
</body>
</html>