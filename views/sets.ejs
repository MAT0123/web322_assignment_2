

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>

    <%- include('partials/navbar' , {page: "/lego/sets"}) %>
    <div class="container mx-auto">
        <div class="hero min-h-screen bg-base-200">
            <div class="text-center hero-content">
                <div class="max-w-md">
                    <h1 class="mb-5 text-5xl font-bold">Collection</h1>
                    <p class="mb-5">Check the card bellow</p>
                </div>
            </div>
        </div>
        <table class="table w-full">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Theme</th>
                    <th>Year</th>
                    <th>Parts</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% sets.forEach(set => { %>
                    <tr>
                        <td>
                            <img src="<%= set.img_url %>" alt="<%= set.name %>" class="avatar">
                        </td>
                        <td><%= set.name %></td>
                        <td>
                            <a href="/lego/sets?theme=<%= set.Theme.name %>" class="btn btn-primary"><%= set.Theme.name %></a>
                        </td>
                        <td><%= set.year %></td>
                        <td><%= set.num_parts %></td>
                        <td>
                            <a href="/lego/sets/<%= set.set_num %>" class="btn btn-primary">Details</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>


    

</body>
</html>