
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Set</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('partials/navbar', {page: '' }) %>
    <div class="container mx-auto">
        <div class="hero min-h-screen bg-base-200">
            <div class="text-center hero-content">
                <div class="max-w-md">
                    <h1 class="mb-5 text-5xl font-bold">Edit Set</h1>
                    <p class="mb-5">Please fill out the form below to edit the set</p>
                </div>
            </div>
        </div>
        <form action="/lego/editSet" method="POST">
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Set Number</span>
                </label>
                <input type="text" name="set_num" class="input input-bordered" required readonly value="<%= set.set_num %>">
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Name</span>
                </label>
                <input type="text" name="name" class="input input-bordered" required value="<%= set.name %>">
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text

                    ">Year</span>
                </label>
                <input type="number" name="year" class="input input-bordered" required value="<%= set.year %>">
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Number of Parts</span>
                </label>
                <input type="number" name="num_parts" class="input input-bordered" required value="<%= set.num_parts %>">
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Image URL</span>
                </label>
                <input type="url" name="img_url" class="input input-bordered" required value="<%= set.img_url %>">
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text
                    ">Theme</span>
                </label>
                <select name="theme_id" class="select select-bordered" required>
                    <% themes.forEach(theme=>{ %>
                    <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                        <%= theme.name %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="form-control">
                <button class="btn-secondary btn" type="submit">Update Set</button>
            </div>
           
        </form>
    </div>
</body>
</html>